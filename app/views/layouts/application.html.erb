<!DOCTYPE html>
<html>
<head>
  <title>TreebookApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
  <div class="row">
    <div class="col-xs-2 nav-container">
      <a class="navbar-brand" href="#"> TreeBook </a>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><%= link_to "All Statuses", feed_path %></li>
      <% if user_signed_in? %>
        <li class="active"><%= link_to current_user.full_name , edit_user_registration_path %></li>
        <li class="active"><%= link_to "Log Out " ,  logout_path %></li>
      <% else %>
        <li class="active"><%= link_to "Sign Up" ,  register_path %></li>
        <li class="active"><%= link_to "Log In" , login_path %></li>
         <!--Sidebar content-->
      <% end %>
      </ul>
    </div>
    <div class="col-xs-10 page-content-container">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
