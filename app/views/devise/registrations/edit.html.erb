<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="row">
  <div class="col-xs-8">
    <%= devise_error_messages! %>
      <div class="input-group well">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "control-form", method: :put }) do |f| %>

            <%= f.input :email, autofocus: true %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :profile_name %>


          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

            <%= f.input :password, placeholder: "leave blank if you don't want to change it",
             autocomplete: "off" %>

            <%= f.input :password_confirmation, autocomplete: "off" %>

            <%= f.input :current_password, as: :password, autocomplete: "off",
            placeholder: "Enter your current password" %>


            <%= f.button :submit, "Update", class:"btn btn-primary" %>

        <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>

    </div>
  </div>
</div>
